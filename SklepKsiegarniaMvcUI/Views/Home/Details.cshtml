@model Book 

<h2>@Model.BookName</h2>

<div>
    <img src="/images/@Model.Image" alt="Book Cover" />
</div>

<div>
    <p><strong>Author:</strong> @Model.AuthorName</p>
    <p><strong>Release Date:</strong> @Model.ReleaseDate</p>
    <p><strong>Genre:</strong> @Model.Genre.GenreName</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Cover Type:</strong> @Model.CoverType</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<div>
</div>

<a href="/Home/Index" class="btn btn-primary">Back to List</a>
